<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel"
xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true">
<Panel headerText="{i18n>hellopanel}" class="sapUiResponsiveMargin" width="auto" >
<content>
<Button id="helloDialogButton" icon="sap-icon://action" text="{i18n>HelloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"></Button>
<Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
<Input value="{/recipient/name}"
       width="60%" ></Input>
<Text text="{/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor" ></Text>
 </content>
 </Panel>
 <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML"/>
</mvc:View>