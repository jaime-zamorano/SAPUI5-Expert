<mvc:View controllerName="logaligroup.SAPUI5.controller.InvoicesList" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" >
<m:List id="invoceList" headerText="{i18n>InvoicesListTitle}" 
class="sapUiResposiveMargin" width="auto" 
items="{ path:'northwind>/Invoices',
         sorter: {path: 'ShipperName' , group: true}
         
         }">
<m:headerToolbar>
<m:Toolbar >
<m:Title text="{i18n>InvoicesListTitle}"/>
<m:ToolbarSpacer />
<m:SearchField width="50%" search=".onFilterInvoices"/>
</m:Toolbar>
</m:headerToolbar>
<m:items>
<m:ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                            number="{ parts : [ {path : 'northwind>ExtendedPrice'},
                                                {path : 'currency>/usd'}],
                                      type: 'sap.ui.model.type.Currency',
                                      formatOptions: {
                                          showMeasure : false
                                      }}"
                  numberUnit="{currency>/usd}"
                  numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error' }">

                  </m:ObjectListItem>
</m:items>
</m:List>
</mvc:View>