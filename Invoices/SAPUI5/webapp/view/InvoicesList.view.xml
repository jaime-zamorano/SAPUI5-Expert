<mvc:View xmlns:control="sap.gantt.control" controllerName="logaligroup.SAPUI5.controller.InvoicesList" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" >
<m:Panel accessibleRole="Region" >
<m:headerToolbar>
<m:Toolbar >
<m:Title text="{i18n>invoiceListTitle}"/>
<m:ToolbarSpacer />
<m:SearchField width="50%" search=".onFilterInvoices" placeholder="{i18n>searchFieldplaceHolder}"/>
</m:Toolbar>
</m:headerToolbar>
<m:Table id="invoceList" headerText="{i18n>invoiceListTitle}" 
class="sapUiResposiveMargin" width="auto" 
items="{ path:'northwind>/Invoices',
         sorter: {path: 'ShipperName' , group: true}
         
         }">
<m:columns>
       <m:Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="5em" >
          <m:Text text="{i18n>ColumnQuantity}"/> 
       </m:Column>
       <m:Column >
          <m:Text text="{i18n>ColumnName}"/> 
       </m:Column>
       <m:Column minScreenWidth="Small" demandPopin="true">
          <m:Text text="{i18n>ColumnStatus}"/> 
       </m:Column>
       <m:Column minScreenWidth="Tablet">
          <m:Text text="{i18n>ColumnSupplier}"/> 
       </m:Column>
       <m:Column hAlign="End">
          <m:Text text="{i18n>ColumnPrice}"/> 
       </m:Column>
</m:columns>
<m:items>
<m:ColumnListItem type="Navigation"
                  press="navigateToDetails">
    <m:cells>
        <m:ObjectNumber number="{northwind>Quantity}" emphasized="false" />
        <m:ObjectIdentifier title="{northwind>ProductName}"/>
        <m:Text text="{
            path: 'northwind>Status',
            formatter: '.formatter.invoiceStatus'
         }"/>
        <m:Text text="{northwind>ShipperName}"/>
        <m:ObjectNumber  number="{ parts : [ {path : 'northwind>ExtendedPrice'},
                                    {path : 'currency>/usd'}],
                                    type: 'sap.ui.model.type.Currency',
                                  formatOptions: {
                                          showMeasure : false
                                      }}"
                         unit="{currency>/usd}"
                         state="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error' }" />

    </m:cells>
</m:ColumnListItem>
</m:items>
</m:Table>
</m:Panel>
</mvc:View>